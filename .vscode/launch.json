  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'doh-proxy-auth'",
      "cargo": {
        "args": [
          "build",
          "--bin=doh-proxy",
          "--package=doh-proxy",
          "--no-default-features"
        ],
        "filter": {
          "name": "doh-proxy",
          "kind": "bin"
        }
      },
      "env": {
        "RUST_LOG": "debug"
      },
      "args": [
        "--server-address=9.9.9.9:53",
        "--listen-address=127.0.0.1:58080",
        "--validation-algorithm=ES256",
        "--validation-key-path=../.private/public_key_es256.pem",
        //"--validation-key-path=../public_key_es256.example"
        // "--validation-algorithm=HS256",
        // "--validation-key-path=../secret_key_hs256.example"
        // "--disable-auth"
        "--domains-blocklist=../.private/blocklist.txt",
      ],
      "cwd": "${workspaceFolder}/.private"
    }
  ]
}
